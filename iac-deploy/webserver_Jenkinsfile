pipeline {
    agent any
    
    tools {
      terraform 'Terraform'
      }

    stages {
        stage('Terraform init') {
            steps { 
                script {
                    sh '''
                      cd webserver
                      terraform init && terraform apply -auto-approve
                '''
                }
            }
        }       
        
