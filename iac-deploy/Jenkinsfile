pipeline {
    agent any
    
    tools {
      terraform 'Terraform'
      }

    stages {
        stage('Clean workspace') {
            steps {
               cleanWs()
            }
        }

        stage('Checkout-SCM') {
            steps {
                git branch: 'development', url: 'https://github.com/irfan-1117/vpc-projects.git'
            }
        }
        
        stage('Terraform init') {
            steps { 
                script {
                    sh '''
                      cd vpc
                      terraform init
                '''
                }
            }
        }       
        
        stage('Terraform apply') {
            steps { 
                script {
                    sh '''
                      terraform apply -auto-approve
                 '''
                }
            }
        }
    }
}
