pipeline {
    agent any
    
    tools {
      terraform 'Terraform'
      }

    stages {
        stage ('Clean Workspace') {
            steps {
              cleanWs()
              }
           }

        stage ('Checkout-scm') {
            steps {
                script {
                    git branch: 'development', url: 'https://github.com/irfan-1117/vpc-projects.git'
                }
            }
        }
           
        stage('Terraform init') {
            steps { 
                git branch: 'development', url: 'https://github.com/irfan-1117/vpc-projects.git'
                sh 'cd vpc'
                sh 'ls -lrta'
                sh 'terraform init'
            }
        }
    }
}
